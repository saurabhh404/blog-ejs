<%- include('partials/header') -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="newPostTitle">Title</label>
    <input type="text" name="newPostTitle" class="form-control" placeholder="Type an Awesome Title"><br>
    <label for="newPostBody">Post</label>
    <textarea name="newPostBody" class="form-control" placeholder="Now type Something..."></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>
